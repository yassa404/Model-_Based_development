% Define two matrices A and B
matrixA =[3 2 1 ; 6 5 4 ; 9 8 7];
matrixB =[12 11 10;15 14 13;18 17 16];

%Add matrices A and B
matrixSum=plus(matrixA,matrixB);
disp(matrixSum)
   

%example2 
rowVector=(1:5);                                          % Create a row vector named rowVector with values from 1 to 5
columnVector=(6:10)';                                     %Create a column vector named columnVector with values from 6 to 10
horizontalConcat=horzcat(rowVector,columnVector');        %Concatenate rowVector and columnVector horizontally and store the result in a variable called horizontalConcat
disp(horizontalConcat)                                    %Display the contents of horizontalConcat


%example 3
originalMatrix=rand(2);                                  %Create a 2x2 matrix named originalMatrix with any values you like
repeatedMatrix=repmat(originalMatrix,2,2);               %Use the repmat function to replicate originalMatrix into a 4x4 pattern  and store it in a variable  called repeatedMatrix
                                                      
disp(repeatedMatrix)                                     %Display the contents of repeatedMatrix


%example 4
identityMatrix=eye(3,3);                                  % Create the identity matrix of size 3x3
matrixProduct=matrixA* matrixA;                           % % Compute the product of the identity matrix and matrix A
disp(matrixProduct)                                      
 
